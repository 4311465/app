<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="zjq.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:zjq.Views"
    Title="自救器管理系统">

    <TabBar>
        <ShellContent
            Title="首页"
            Icon="dotnet_bot.png"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="自救器"
            Icon="dotnet_bot.png"
            ContentTemplate="{DataTemplate local:SelfRescuerListPage}"
            Route="SelfRescuerListPage" />
    </TabBar>

    <ShellContent
        Title="自救器详情"
        ContentTemplate="{DataTemplate local:SelfRescuerDetailPage}"
        Route="SelfRescuerDetailPage" />
    <ShellContent
        Title="添加自救器"
        ContentTemplate="{DataTemplate local:AddSelfRescuerPage}"
        Route="AddSelfRescuerPage" />
    <ShellContent
        Title="维护记录"
        ContentTemplate="{DataTemplate local:MaintenanceRecordPage}"
        Route="MaintenanceRecordPage" />
    <ShellContent
        Title="使用记录"
        ContentTemplate="{DataTemplate local:UsageRecordPage}"
        Route="UsageRecordPage" />

</Shell>
