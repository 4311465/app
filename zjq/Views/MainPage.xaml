<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="zjq.Views.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,20"
            Spacing="20">
            <Image
                Source="dotnet_bot.png"
                HeightRequest="150"
                Aspect="AspectFit"
                SemanticProperties.Description="系统图标" />

            <Label
                Text="自救器管理系统"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1"
                HorizontalOptions="Center" />

            <Label
                Text="实时监控自救器状态，确保安全使用"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                HorizontalOptions="Center" />

            <Grid ColumnDefinitions="*,*" RowDefinitions="*,*" RowSpacing="10" ColumnSpacing="10" Margin="0,20,0,0">
                <Button
                    Text="查看所有自救器"
                    Command="{Binding ViewAllSelfRescuersCommand}"
                    Grid.Row="0"
                    Grid.Column="0" />
                <Button
                    Text="添加自救器"
                    Command="{Binding AddSelfRescuerCommand}"
                    Grid.Row="0"
                    Grid.Column="1" />
                <Button
                    Text="过期检查"
                    Command="{Binding CheckExpiryCommand}"
                    Grid.Row="1"
                    Grid.Column="0" />
                <Button
                    Text="维护提醒"
                    Command="{Binding CheckMaintenanceCommand}"
                    Grid.Row="1"
                    Grid.Column="1" />
            </Grid>

            <StackLayout Margin="0,20,0,0">
                <Label
                    Text="系统状态"
                    Style="{StaticResource Headline}"
                    FontSize="18" />
                <Label x:Name="StatusLabel" 
                       Text="{Binding StatusText}" 
                       Margin="0,10,0,0" />
            </StackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
